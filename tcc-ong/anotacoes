administradores 

<?php
session_start();

if (!isset($_SESSION['admin_id'])) {
    header('Location: login.html');
    exit;
}

require 'db.php';

// Para carregar administradores do banco
$stmt = $pdo->query("SELECT id, nome, email FROM administradores ORDER BY nome");
$administradores = $stmt->fetchAll();
?>

